<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:background="#1C2428">
    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left|start"
        android:layout_marginBottom="50dp"
        >

        <ImageView
            android:id="@+id/previewImage"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="-20dp"
            android:rotation="90"
            android:visibility="visible"/>

        <Button
            android:id="@+id/btnCancle"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="-10dp"
            android:background="@color/bg_color"
            android:text="delete"
            android:textColor="@color/white_color"
            android:layout_below="@id/previewImage"
            />
        <Button
            android:id="@+id/btnSave"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="save"
            android:textColor="@color/white_color"
            android:background="@color/bg_color"
            android:layout_below="@id/previewImage"
            android:layout_toRightOf="@id/btnCancle"
            />

    </RelativeLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="top"
        android:background="@color/bg_color"
        android:orientation="horizontal">

        <Spinner
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:id="@+id/buttonClick4"
            android:src="@mipmap/menu_opt"
            android:entries="@array/bark_array"
            android:text=""
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp">
        </Spinner>

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:id="@+id/buttonClick5"
            android:background="@mipmap/turn_camera"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp"
            android:layout_marginRight="90dp"
            android:layout_marginEnd="90dp">

        </Button>

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:id="@+id/buttonClick6"
            android:background="@mipmap/flash"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp">

        </Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rlBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="bottom"
        android:background="@color/bg_color"
        android:orientation="horizontal">

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:id="@+id/buttonClick1"
            android:background="@mipmap/make_sound_button"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp">
        </Button>

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:id="@+id/buttonClick2"
            android:background="@mipmap/camera"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp"
            android:layout_marginRight="90dp"
            android:layout_marginEnd="90dp">

        </Button>

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:id="@+id/buttonClick3"
            android:background="@mipmap/video_button"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp">

        </Button>
        </LinearLayout>

</FrameLayout>