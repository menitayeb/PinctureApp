<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Mashu"
    android:elevation="8dp"
    >


    <ImageButton
        android:id="@+id/edit_myprofile_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="#00000000"
        android:layout_gravity="bottom|end"
        android:layout_margin="0dp"
        android:src="@mipmap/edit"
        />




    <RelativeLayout
        android:id="@+id/rlMyprofileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        >



        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/myProfileImage"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:border_width="1dp"
            app:border_color="#FFFFFFFF"
            />



    </RelativeLayout>

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:textSize="18sp"
        android:textColor="@color/white_color"
        android:textStyle="bold"
        android:visibility="visible"
        android:text="Anhel Bonani"/>

    <RelativeLayout
        android:id="@+id/rlToolbarImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:visibility="gone"
        >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/app_icon_image"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/second_image"
        android:layout_marginTop="6dp"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />



    <ImageView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/app_icon_image"
        android:scaleType="center"
        android:src="@mipmap/ic_headline"/>

    </RelativeLayout>
</android.support.v7.widget.Toolbar>